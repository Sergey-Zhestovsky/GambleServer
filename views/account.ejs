<!DOCTYPE html>
<html>

<head>
    <% include _layouts/header %>
    <link rel='stylesheet' href='/css/elements/management.css' />
    <link rel='stylesheet' href='/css/account.css' />
</head>

<body>
    <% include _layouts/title %>
    <script type="text/javascript">
    window.localization = <%- JSON.stringify(text.page) %>;
    </script>
    <main class="wrapper">
        <div class="center-align">
            <div class="account_container">
                <div class="account_container-title" data-text="Personal information">Personal information</div>
                <div class="account_information">
                    <div class="account_information-label">
                        <div class="account_information-title">Full name</div>
                        <div class="account_information-context"><%-userData.user.name%></div>
                    </div>
                    <div class="account_information-label">
                        <div class="account_information-title">E-mail</div>
                        <div class="account_information-context"><%-userData.user.mail%></div>
                    </div>
                    <div class="account_information-label">
                        <div class="account_information-title">Account secure</div>
                        <div class="account_information-context">
                            <% if (userData.user.salt) { %>
                                <i class="fa fa-check" aria-hidden="true"></i>
                            <% } else { %>
                                <i class="fa fa-times" aria-hidden="true"></i>
                            <% } %>
                        </div>
                    </div>
                    <div class="account_information-label">
                        <div class="account_information-title">Amount of devices</div>
                        <div class="account_information-context"><%-userData.deviceLength%></div>
                    </div>
                </div>
            </div>
            <div class="account_container container-item-table">
                <div class="item-table">
                    <div class="item-table_header">
                        <div class="item-table_header-title" data-text="Products table">Products table</div>
                        <div class="item-table_view-setting">
                            <div class="item-table_view-anount">
                                <span>Show</span>
                                <div class="custom-select">
                                    <div class="select-styled"></div>
                                    <ul class="select-options hide">
                                    </ul>
                                </div>
                                <span>entries</span>
                            </div>
                            <div class="item-table_add-button">Add</div>
                            <div class="item-table_view-pages">
                            </div>
                        </div>
                    </div>
                    <div class="item-table_body">
                        <table class="table-block">
                            <thead class="table-block_header">
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <div class="popup-form-wrapper">
        <div class="popup-form">
            <div class="popup-form_header popup-form_center">
                <div class="popup-form_header-title">Edit</div>
                <div class="popup-form_header-close">
                    <i class="fa fa-times"></i>
                </div>
            </div>
            <div class="popup-form_body">
                <div class="popup-form_body-container">
                    <div class="popup-form_body-container-wrapper">
                        <div class="popup-form_body-container-title">Product</div>
                        <div class="popup-form_body-container-form">
                            <label class="popup-form_body-container-label">
                                <span class="popup-form_body-container-label-title">Product type</span>
                                <div class="custom-select" id="popupFormProductType">
                                    <div class="select-styled"></div>
                                    <ul class="select-options hide">
                                    </ul>
                                </div>
                                <div class="popup-form_error-block"></div>
                            </label>
                            <label class="popup-form_body-container-label input-label">
                                <span class="popup-form_body-container-label-title">Shop code</span>
                                <input class="popup-form_body-container-label-input" id="popupFormShopCode">
                                <div class="popup-form_error-block"></div>
                            </label>
                            <div class="popup-form_body-container-submit">Submit</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% include _layouts/footer %>
</body>
<script async defer type="text/javascript" src="/js/formValidator.js"></script>
<script async defer type="text/javascript" src="/js/header.js"></script>
<script async defer type="module" src="/js/page/account.js"></script>

</html>